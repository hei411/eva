//Same sum function as Neel's paper
def sum_acc = 
    nfix loop: # (Str(Nat) -> Nat -> Str(Nat)) => 
        fun ns:Str(Nat) acc:Nat => 
            let hd:::tl = ns in 
            let acc'=acc+hd in 
            acc'::: >(<?loop <tl acc')

def sum # ns:Str(Nat) = ?sum_acc ns 0

def const{a} x:#a =
    nfix loop:#(Str(a)) => 
        ?x::: ?loop

def zeros' = const{Nat} #0

def iter{Stable a} f:#(a->a) = 
    nfix loop:#(a->Str(a))=>
        fun acc:a => 
            acc:::> (<?loop (?f acc))

