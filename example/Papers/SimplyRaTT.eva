//map for events
def map'{a,b} f:#(a->b) = 
    nfix loop : #(Ev(a)->Ev(b)) => 
        fun x:Ev(a) =>
            let x' = out x in 
            match x' with 
                |inl v => 
                    let result = ?f v in 
                    let temp = inl result: b+ >Ev(b) in
                    into temp:Ev(b) 
                |inr rest => 
                    let rest' = >(<?loop <rest) in 
                    let temp = inr rest': b+>Ev(b) in 
                    into temp:Ev(b)

