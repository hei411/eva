//To implement stutter, due to Lively RaTT's restrictive rules
//We can either implement it with a buffer, or two mutually recursive functions
def stutter =
    nfix loop:#(Nat->Str(Nat)) => 
        fun n:Nat => 
            n::: >(?delayStr{Nat} n (<?loop (suc n)))

def stutter' = 
    let helper = 
        nfix loop:#((Nat->Str(Nat)) *
                (Nat->Str(Nat))) =>
            let one n:Nat= 
                n:::>(snd <?loop n) in
            let two n:Nat= 
                n:::>(fst <?loop (suc n)) in
            (one,two) 
        in  
    #(fst ?helper)

