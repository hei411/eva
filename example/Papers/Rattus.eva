def sum = 
    let run = 
        nfix loop :#(Nat -> Str(Nat) -> Str(Nat) )=>
            fun acc:Nat xs:Str(Nat) => 
                let x:::xs' = xs in 
                let acc' = acc+ x in 
                acc'::: >(<?loop acc' <xs')
    in
    # (?run 0)

def buffer{Stable a} = 
    let helper = nfix loop: #(List(a)->Str(a) ->Str(List(a))) => 
                    fun l:List(a) xs:Str(a) => 
                        let x:::xs' = xs in 
                        let l' = l++[x] in 
                        l':::>(<?loop l' <xs')
    in 
    #(?helper []:List(a))

