def scan[Stable a,b] f:#(a->b->a)  = 
    rec m: # ( a -> Str(b)->Str(a))
        => fun z:a str:Str(b) 
            => ?conStr[a] (?f z (?hdStr[b] str))
              ((fun x:a=>  > (<?m x (<(?tlStr[b] str)))) (?f z (?hdStr[b] str)) )