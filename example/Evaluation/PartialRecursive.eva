//Example primitive recursion 
def primitiveRecursion2 
    g: #(Nat->Nat->Nat)
    h: #(Nat->Nat->Nat->Nat->Nat) # = 
        fun y:Nat x1:Nat x2:Nat => 
            primrec y with 
                | 0=> ?g x1 x2 
                | suc z fby rest => ?h z rest x1 x2

import Prelude.Bool 
