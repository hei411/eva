import Modality.Stream as MS
type Stream = MS.Str(Nat)

def fibHelper = 
    rec repeat: # (Nat->Nat-> Stream) =>
        fun x:Nat y:Nat =>
            let sum =  x + y in 
            let rest = > (<?repeat y sum) in 
            sum:::rest

